@model DSTutorials1909.ViewModel.CourseViewModel


<div class="container">
    <div class="row mt-3 mb-2">
        <div class="col-8">
            <h2 class="text-primary text-danger">Are you sureyou want to Delete SubMenu ?</h2>
        </div>
    </div>
    <form method="post">
        <input asp-for="@Model.SubMenu.SubMenuId" hidden />
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.SubMenu.CourseId" class="form-label"></label>
            </div>
            <div class="col-10">
                <input disabled asp-for="@Model.SubMenu.Courses.CourseName" class="form-control" />
            </div>
        </div>

        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.SubMenu.MenuId" class="form-label"></label>
            </div>
            <div class="col-10">
                <input disabled asp-for="@Model.SubMenu.Menu.MenuName" class="form-control" />
            </div>
        </div>

        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.SubMenu.SubMenuSequence" class="form-label"></label>
            </div>
            <div class="col-10">
                <input disabled asp-for="@Model.SubMenu.SubMenuSequence" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.SubMenu.SubMenuName" id="SideSubMenuName" class="form-label"></label>
            </div>
            <div class="col-10">
                <input disabled asp-for="@Model.SubMenu.SubMenuName" class="form-control" />
            </div>
        </div>

        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.SubMenu.SubMenuUrl" class="form-label"></label>
            </div>
            <div class="col-10">
                <input disabled asp-for="@Model.SubMenu.SubMenuUrl" class="form-control" />

            </div>
        </div>

        <div class="row mt-2 mb-2">
            <div class="col-6 col-md-3 mt-3 mb-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-6 col-md-3 mt-3 mb-2">
                <a asp-controller="SubMenu" asp-action="Index" class="btn btn-outline-light form-control">Back To List</a>
            </div>
        </div>

    </form>
</div>



