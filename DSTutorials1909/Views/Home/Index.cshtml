@model IEnumerable<DSTutorials1909.Models.Courses>

<div class="container">
    <!-- Section for paragraph and image -->
    <div class="row">
        <div class="col-md-12 text-center my-4">
            <img src="~/Images/frame.png" class="img-fluid" style="width: 100px; height:100px;">
            <h1 style="color:white" class="text-primary">Welcome to Our Courses </h1>
            <p style="color:white">

                Explore a variety of courses tailored to enhance your skills and knowledge. Whether you are a beginner or an expert, we have something for everyone. Start your learning journey with us today!
            </p>
        </div>
    </div>

    <div class="text-center mb-4 mt-3">
        <h1 class="text-primary">Tutorials</h1>
    </div>

    <!-- Cards Section -->
    <div class="row text-center justify-content-center">
        @foreach (var course in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-6 mb-4 d-flex">
                <div class="card card-hover" style="width: 100%; height: 100%;">
                    <img src="@course.CourseImage" class="card-img-top" style="height: 150px;  object-fit: contain; width: 100%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.CourseName</h5>
                        <p class="card-text">@course.CourseDetails</p>
                        <a href="#" class="btn btn-primary mt-auto">Learn @course.CourseName</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>



<style>
    .card-hover {3
        transition: transform 0.01s, box-shadow 0.01s;
        border-radius: 5px;
    }

    .card-hover:hover {
        transform: scale(1.01);
        box-shadow: 0 4px 8px rgba(0, 255, 255, 0.6), 0 6px 20px rgba(0, 255, 255, 0.3); /* Vapor theme glow */
    }
</style>