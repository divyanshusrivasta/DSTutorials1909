@model IEnumerable<DSTutorials1909.Models.Courses>

<div class="container">
    <!-- Section for paragraph and image -->
    <div class="row mt-4">
        <div class="col-md-12 text-center my-4">
            <img src="~/Images/Screenshot 2024-09-30 173634.png" class="img-fluid" style="width: 100px; height:100px;">
            <h1 style="color:white" class="text-white mt-3">Welcome to
                <span class="text-primary dstyped"></span>

            </h1>
            <div class="content text-white">
                <h3 >Learn
                    <span class="type text-primary"></span>
                </h3>
                
            </div>
            <h6 style="color:white" class="pe-5 ps-5 me-5 ms-5 mt-4">
                Explore free courses on DSTutorials to find the perfect one for you! I've got you covered with easy-to-follow lessons on basic coding techniques. Let's make learning simple and fun!
            </h6>
        </div>
        <div class="col-md-12 text-center my-4">
            <h5  style="color:white">
                This website is under development and listed features will not be available ★ Stay tuned for more updates and features as we ramp up to launch very soon.
            </h5>
        </div>
    </div>

    <div class="text-center mb-4 mt-5">
        <h1 class="text-primary">Tutorials</h1>
    </div>

    <!-- Cards Section -->
    <div class="row text-center justify-content-center">
        @foreach (var course in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-6 mb-4 d-flex">
                <div class="card card-hover" style="width: 100%; height: 100%;">
                    <img src="@course.CourseImage" class="card-img-top" style="height: 150px; object-fit: contain; width: 100%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.CourseName</h5>
                        <p class="card-text">@course.CourseDetails</p>
                        <a href="@Url.Action("CourseDetails", "Main", new { menuUrl = course.CourseName.ToLower().Replace(" ", "-") })" class="btn btn-primary mt-auto">Learn @course.CourseName</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card-hover {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 5px;
    }

        .card-hover:hover {
            transform: scale(1.01);
            box-shadow: 0 4px 8px rgba(0, 255, 255, 0.6), 0 6px 20px rgba(0, 255, 255, 0.3); /* Vapor theme glow */
        }

    #fade-text {
        opacity: 1;
        transition: opacity 2s ease-out;
    }

    /* Faded-out state */
    .hidden {
        opacity: 0;
    }


    .type {
        font-weight: normal;
        color: #6f42c1; /* Matches the 'text-primary' class color */
    }

    .dstyped {
        font-weight: normal;
        color: #6f42c1; /* Matches the 'text-primary' class color */
    }

</style>

<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>

<script>
    var typed = new Typed('.type', {
        strings: ["HTML", "CSS", "JavaScript", "ASP.NET"],
        typeSpeed: 50,
        backSpeed: 50,
        smartBackspace: true, // Only remove what doesn't match the previous string
        loop: true
    });
    var dstyped = new Typed('.dstyped', {
        strings: ["DSTutorials"],
        typeSpeed: 50,
        backSpeed: 50,
        showCursor: false,
        smartBackspace: true, // Only remove what doesn't match the previous string
        loop: false
    });

    
    
</script>
