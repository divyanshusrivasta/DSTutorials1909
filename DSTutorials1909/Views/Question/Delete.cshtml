@model DSTutorials1909.Models.Question


<div class="container">
    <div class="row mt-2 mb-3">
        <div class="col-7">
            <h3 class="text-primary text-danger">Are you Sure You Want to Delete Question ?</h3>
        </div>
        
    </div>

    <form method="post">

        <input asp-for="QId" hidden />
        <input asp-for="CreatedDate" hidden />
        <input asp-for="ModifiedDate" hidden />
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="QName" class="form-label"></label>
            </div>
            <div class="col-10">
                <input disabled asp-for="QName" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label class="form-label">Question Description</label>
            </div>
            <div class="col-10">
                <div class="form-control" style="border: none; background: transparent; padding: 0;">
                    @Html.Raw(Model.QDescription)
                </div>
            </div>
        </div>


        <div class="row mt-2 mb-2">
            <div class="col-6 col-md-3 mt-3 mb-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-6 col-md-3 mt-3 mb-2">
                <a asp-controller="Question" asp-action="Index" class="btn btn-outline-light form-control">Cancle</a>
            </div>
        </div>
    </form>
</div>