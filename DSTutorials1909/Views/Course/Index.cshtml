@model IEnumerable<DSTutorials1909.Models.Courses>

<div class="container">
    <div class="row mt-3 mb-3">
        <div class="col-6">
            <h2 class="text-primary">List Of Courses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add New Course</a>
        </div>
    </div>

    <table class="display" id="tblcourse" >
        <thead>
            <tr>
                <th style="background-color:blue;color:white;">Course Id</th>
                <th style="background-color:blue;color:white;">Course Name</th>
                <th style="background-color:blue;color:white;">Course Detail</th>
                <th style="background-color:blue;color:white;">Course Image</th>
                <th style="background-color:blue;color:white;">Course Sequence</th>
                <th style="background-color:blue;color:white;">Edit</th>
                <th style="background-color:blue;color:white;">Delete</th>
            </tr>
        </thead>
      

    </table>
</div>



@section Scripts{
     <script src="~/js/CourseTable.js"></script>
}