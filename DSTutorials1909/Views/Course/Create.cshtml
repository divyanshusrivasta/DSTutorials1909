@model DSTutorials1909.ViewModel.CourseViewModel

<div class="container">
    <div class="row mt-3 mb-3">
        <div class="col-8">
            <h2 class="text-primary">Add New Course</h2>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data">
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.Courses.CourseName" class="form-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="@Model.Courses.CourseName" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.Courses.CourseDetails" class="form-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="@Model.Courses.CourseDetails" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.Courses.MenuUrl" class="form-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="@Model.Courses.MenuUrl" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.Courses.CourseSequence" class="form-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="@Model.Courses.CourseSequence" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-2">
                <label asp-for="@Model.Courses.CourseImage" class="form-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="@Model.Courses.CourseImage" type="file" class="form-control" />
            </div>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-6 col-md-3 mt-3 mb-2">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-6 col-md-3 mt-3 mb-2">
                <a asp-controller="Course" asp-action="Index" class="btn btn-outline-light form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>
